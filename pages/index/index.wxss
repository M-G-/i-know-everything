/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  text-align: center;
}

.top{
  width: 100%;
  flex-shrink: 0;
  height: 10rpx;
  position: relative;
}

.main{
  width: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
}

.toolbar{
  width: 100%;
  flex-shrink: 0;
  height: 150rpx;
}

.button{
  display: inline-block;
  margin: 0 20rpx 0 20rpx;
}

.review{
  width: 680rpx;
  height: 800rpx;
  border-radius: 10rpx;
}

.title{
  margin-top: 30rpx;
  display: inline-block;
  font-weight: bold;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  font-size: 40rpx;
  margin-left: 50rpx;
}

.loading{
  margin-top: 30rpx;
  display: block;
  color: #999;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.myCanvas{
  position: fixed;
  left: -1000%;
}